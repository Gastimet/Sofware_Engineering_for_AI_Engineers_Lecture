pipeline {
    agent any

    tools {
        git 'Default'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo '📦 Kod, Git reposundan çekiliyor...'
                checkout scm
            }
        }

        stage('Start Services & Run Training') {
            steps {
                dir('Autogluon_multiple_regression_models') {
                    script {
                        echo '🚀 MLflow servisi docker-compose ile başlatılıyor...'
                        sh 'docker-compose up -d --build mlflow'

                        echo '⏳ MLflow servisinin hazır olması bekleniyor...'
                        sh 'sleep 10'

                        echo '🤖 Model eğitimi başlatılıyor...'
                        sh 'docker-compose up --build trainer'

                        echo '✅ Model eğitimi tamamlandı!'
                    }
                }
            }
        }
    }

    post {
        always {
            dir('Autogluon_multiple_regression_models') {
                script {
                    echo '🧹 Tüm servisler docker-compose ile kapatılıyor...'
                    sh 'docker-compose down || true'
                }
            }
        }
        success {
            echo '✅ Pipeline başarıyla tamamlandı!'
        }
        failure {
            echo '❌ Pipeline başarısız oldu!'
        }
    }
}