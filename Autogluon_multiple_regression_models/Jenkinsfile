pipeline {
    agent any

    environment {
        // Proje dizini (Git reposundaki klasÃ¶r adÄ±)
        PROJECT_DIR = 'Autogluon_multiple_regression_models'
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Kodu Git'ten Ã§ek
                checkout scm
            }
        }

        stage('Build Trainer Image') {
            steps {
                dir(env.PROJECT_DIR) {
                    echo 'ğŸ”¨ Docker imajÄ± inÅŸa ediliyor...'
                    // --no-cache kullanarak temiz kurulum yapÄ±yoruz
                    sh 'docker compose build --no-cache trainer'
                }
            }
        }

        stage('LLM Vulnerability Scan (Garak)') {
            steps {
                dir(env.PROJECT_DIR) {
                    echo 'ğŸ•µï¸ Garak LLM Vulnerability Scanner Ã§alÄ±ÅŸtÄ±rÄ±lÄ±yor...'
                    // Garak taramasÄ±nÄ± baÅŸlat (Trainer imajÄ± Ã¼zerinden)
                    sh 'docker compose run --rm -T --no-deps --entrypoint python trainer -m garak --model_type test.Blank --probes test.Blank --report_prefix garak_report'
                }
            }
        }

        stage('Start MLflow') {
            steps {
                dir(env.PROJECT_DIR) {
                    echo 'ğŸš€ MLflow servisi baÅŸlatÄ±lÄ±yor...'
                    sh 'docker compose up -d mlflow'
                    // Servisin tam ayaÄŸa kalkmasÄ± iÃ§in kÄ±sa bir bekleme sÃ¼resi
                    sleep 15
                }
            }
        }

        stage('Run Training & Fairness Check') {
            steps {
                dir(env.PROJECT_DIR) {
                    echo 'ğŸ¤– Model eÄŸitimi ve Fairlearn analizi baÅŸlatÄ±lÄ±yor...'

                    // KRÄ°TÄ°K GÃœNCELLEME: "-u root"
                    // MLflow SQLite veritabanÄ±na yazma izni sorunu yaÅŸamamak iÃ§in
                    // container'Ä± root yetkisiyle Ã§alÄ±ÅŸtÄ±rÄ±yoruz.
                    // Fairlearn analizi de train.py iÃ§inde Ã§alÄ±ÅŸacaÄŸÄ± iÃ§in burada ekstra bir komuta gerek yok.
                    sh 'docker compose run --rm -u root trainer'
                }
            }
        }

        stage('Giskard Quality Scan') {
            steps {
                dir(env.PROJECT_DIR) {
                    echo 'ğŸ•µï¸ Giskard gÃ¼venlik ve kalite taramasÄ± yapÄ±lÄ±yor...'

                    // Giskard test scriptini Ã§alÄ±ÅŸtÄ±rÄ±yoruz.
                    // Bu dosyanÄ±n (src/tests/giskard_scan.py) projede oluÅŸturulduÄŸunu varsayÄ±yoruz.
                    sh 'docker compose run --rm -u root --entrypoint python trainer src/tests/giskard_scan.py'
                }
            }
        }
    }

    post {
        always {
            dir(env.PROJECT_DIR) {
                echo 'ğŸ§¹ Temizlik yapÄ±lÄ±yor...'
                // KonteynerlarÄ± ve volume'leri temizle
