pipeline {
    agent any

    environment {
        PROJECT_DIR = 'Autogluon_multiple_regression_models'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ðŸ“¦ Kod, Git reposundan Ã§ekiliyor...'
                checkout scm
            }
        }

        // STAGE 1: Build the image with Garak installed
        stage('Build Trainer Image') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ðŸ”¨ Docker imajÄ± inÅŸa ediliyor...'
                        sh 'docker compose build --no-cache trainer'
                    }
                }
            }
        }

        // STAGE 2: Garak Integration (Proof of Concept)
        stage('Garak LLM Scanner') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'uwu Garak Vulnerability Scanner Ã§alÄ±ÅŸtÄ±rÄ±lÄ±yor...'
                        // We use the 'test.Blank' model and probe to demonstrate integration
                        // without requiring a real LLM connection yet.
                        // This proves the tool is installed and the pipeline works.
                        sh 'docker compose run --rm -T --entrypoint "python" trainer -m garak -m test.Blank -p test.Blank --report_prefix garak_report'

                        // Optional: Archive the report so you can show your professor
                        // archiveArtifacts artifacts: 'garak_report.jsonl', fingerprint: true
                    }
                }
            }
        }

        stage('Start MLflow') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ðŸš€ MLflow servisi baÅŸlatÄ±lÄ±yor...'
                        sh 'docker compose up -d mlflow'
                        sh 'sleep 15'
                    }
                }
            }
        }

        stage('Run Training') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ðŸ¤– Model eÄŸitimi baÅŸlatÄ±lÄ±yor...'
                        sh 'docker compose run --rm trainer'
                        echo 'âœ… Model eÄŸitimi tamamlandÄ±!'
                    }
                }
            }
        }
    }

    post {
        always {
            dir(env.PROJECT_DIR) {
                script {
                    echo 'ðŸ§¹ Temizlik yapÄ±lÄ±yor...'
                    sh 'docker compose down -v || true'
                }
            }
            cleanWs()
        }
    }
}