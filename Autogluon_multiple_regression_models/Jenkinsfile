pipeline {
    agent any

    environment {
        PROJECT_DIR = 'Autogluon_multiple_regression_models'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ðŸ“¦ Kod, Git reposundan Ã§ekiliyor...'
                checkout scm
            }
        }

        // STAGE 1: Build the image
        stage('Build Trainer Image') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ðŸ”¨ Docker imajÄ± inÅŸa ediliyor...'
                        // We build the 'trainer' service defined in docker-compose.yaml
                        sh 'docker compose build --no-cache trainer'
                    }
                }
            }
        }

        stage('Start MLflow') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ðŸš€ MLflow servisi baÅŸlatÄ±lÄ±yor...'
                        sh 'docker compose up -d mlflow'
                        sh 'sleep 15'
                    }
                }
            }
        }

        stage('Run Training') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ðŸ¤– Model eÄŸitimi baÅŸlatÄ±lÄ±yor...'
                        sh 'docker compose run --rm trainer'
                        echo 'âœ… Model eÄŸitimi tamamlandÄ±!'
                    }
                }
            }
        }
    }

    post {
        always {
            dir(env.PROJECT_DIR) {
                script {
                    echo 'ðŸ§¹ Temizlik yapÄ±lÄ±yor...'
                    sh 'docker compose down -v || true'
                }
            }
            cleanWs()
        }
    }
}