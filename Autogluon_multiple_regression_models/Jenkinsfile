pipeline {
    agent any

    tools {
        dockerTool 'docker-from-host'
    }

    environment {
        PROJECT_DIR = 'Autogluon_multiple_regression_models'
        DOCKER_IMAGE_NAME = 'autogluon-ml-app'
        DOCKER_IMAGE_TAG  = 'latest'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¦ Kod, Git reposundan Ã§ekiliyor...'
                checkout scm
            }
        }

        stage('Start Services & Run Training') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo "ğŸš€ MLflow servisi docker-compose ile baÅŸlatÄ±lÄ±yor..."
                        sh "docker-compose up --build -d mlflow"

                        echo "âŒ› MLflow servisinin saÄŸlÄ±klÄ± olmasÄ± bekleniyor..."
                        sh """
                        sleep 10
                        docker inspect --format='{{.State.Health.Status}}' mlflow | grep -q 'healthy' || (
                            echo 'âš ï¸ MLflow henÃ¼z saÄŸlÄ±klÄ± deÄŸil, 20 saniye bekleniyor...' &&
                            sleep 20
                        )
                        """

                        echo "ğŸ—ï¸ Docker imajÄ± oluÅŸturuluyor..."
                        def trainingImage = docker.build("${env.DOCKER_IMAGE_NAME}:${env.DOCKER_IMAGE_TAG}", ".")

                        echo "ğŸ¤– Model eÄŸitimi baÅŸlatÄ±lÄ±yor..."
                        trainingImage.inside("--network ${env.PROJECT_DIR}_default") {
                            sh '''
                            python -m src.pipeline.train \
                                --task churn \
                                --data-csv-a example_data/source_a.csv \
                                --data-csv-b example_data/source_b.csv \
                                --target churned \
                                --join-keys customer_id \
                                --promote
                            '''
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            dir(env.PROJECT_DIR) {
                script {
                    echo "ğŸ§¹ TÃ¼m servisler docker-compose ile kapatÄ±lÄ±yor..."
                    sleep 5
                    sh "docker-compose down"
                }
            }
            echo 'âœ… Pipeline tamamlandÄ±.'
            cleanWs()
        }
    }
}
