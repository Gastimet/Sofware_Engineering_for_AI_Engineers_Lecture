pipeline {
    agent any

    tools {
        git 'Default'
    }

    environment {
        PROJECT_DIR = 'Autogluon_multiple_regression_models'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo '📦 Kod, Git reposundan çekiliyor...'
                checkout scm
            }
        }

        stage('Build and Start MLflow') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo '🚀 MLflow servisi docker-compose ile başlatılıyor...'
                        sh 'docker-compose build mlflow || true'
                        sh 'docker-compose up -d mlflow'

                        echo '⏳ MLflow servisinin hazır olması bekleniyor...'
                        sh 'sleep 20'
                    }
                }
            }
        }

        stage('Run Training') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo '🤖 Model eğitimi başlatılıyor...'
                        sh 'docker-compose build trainer'
                        sh 'docker-compose run --rm trainer'

                        echo '✅ Model eğitimi tamamlandı!'
                    }
                }
            }
        }
    }

    post {
        always {
            dir(env.PROJECT_DIR) {
                script {
                    echo '🧹 Tüm servisler docker-compose ile kapatılıyor...'
                    sh 'docker-compose down -v || true'
                }
            }
            echo '✅ Pipeline tamamlandı.'
            cleanWs()
        }
        success {
            echo '🎉 Pipeline başarıyla tamamlandı!'
        }
        failure {
            echo '❌ Pipeline başarısız oldu!'
        }
    }
}