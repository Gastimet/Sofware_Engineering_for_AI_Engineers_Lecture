pipeline {
    agent any

    environment {
        PROJECT_DIR = 'Autogluon_multiple_regression_models'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¦ Kod, Git reposundan Ã§ekiliyor...'
                checkout scm
            }
        }

        // STAGE 1: Build the image
        stage('Build Trainer Image') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸ”¨ Docker imajÄ± inÅŸa ediliyor...'
                        sh 'docker compose build --no-cache trainer'
                    }
                }
            }
        }

        // STAGE 2: Garak LLM Vulnerability Scan
        stage('LLM Vulnerability Scan (Garak)') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸ•µï¸ Garak LLM Vulnerability Scanner Ã§alÄ±ÅŸtÄ±rÄ±lÄ±yor...'
                        // FIX: Added '--no-deps'.
                        // Since we are testing a "Blank" model, we don't need MLflow running.
                        // This prevents "container mlflow is unhealthy" errors from stopping the scan.
                        sh 'docker compose run --rm -T --no-deps --entrypoint "python" trainer -m garak --model_type test.Blank --probes test.Blank --report_prefix garak_report'
                    }
                }
            }
        }

        stage('Start MLflow') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸš€ MLflow servisi baÅŸlatÄ±lÄ±yor...'
                        sh 'docker compose up -d mlflow'
                        sh 'sleep 15'
                    }
                }
            }
        }

        // STAGE 3: Run Training
        stage('Run Training') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸ¤– Model eÄŸitimi baÅŸlatÄ±lÄ±yor...'
                        // Run as root to fix permission issues with /mlruns volume
                        sh 'docker compose run --rm -u root trainer'
                        echo 'âœ… Model eÄŸitimi tamamlandÄ±!'
                    }
                }
            }
        }
    }

    post {
        always {
            dir(env.PROJECT_DIR) {
                script {
                    echo 'ğŸ§¹ Temizlik yapÄ±lÄ±yor...'
                    sh 'docker compose down -v || true'
                }
            }
            cleanWs()
        }
    }
}