                        """

                        echo "ğŸ—ï¸ Docker imajÄ± oluÅŸturuluyor..."
                        def trainingImage = docker.build(".", "--network ${env.PROJECT_DIR}_default")

                        echo "ğŸ¤– Model eÄŸitimi baÅŸlatÄ±lÄ±yor..."
                        trainingImage.inside {
                            sh '''
                            python -m src.pipeline.train \
                                --task churn \
                                --data-csv-a example_data/source_a.csv \
                                --data-csv-b example_data/source_b.csv \
                                --target churned \
                                --join-keys customer_id \
                                --promote
                            '''
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            dir(env.PROJECT_DIR) {
                script {
                    echo "ğŸ§¹ TÃ¼m servisler docker-compose ile kapatÄ±lÄ±yor..."
