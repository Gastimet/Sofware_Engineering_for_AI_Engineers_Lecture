pipeline {
    agent any

    environment {
        PROJECT_DIR = 'Autogluon_multiple_regression_models'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¦ Kod, Git reposundan Ã§ekiliyor...'
                checkout scm
            }
        }

        stage('Supply Chain Security (SBOM)') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸ“œ Software Bill of Materials (SBOM) oluÅŸturuluyor...'
                        // We run this in a temp container so we don't need tools installed on the host
                        // "cyclonedx-py" reads the requirements.txt and outputs a standard JSON inventory
                        sh 'docker run --rm -v $(pwd):/app -w /app python:3.11-slim sh -c "pip install cyclonedx-bom && cyclonedx-py requirements requirements.txt -o sbom.json"'

                        // Archive the SBOM so it can be downloaded from Jenkins UI
                        archiveArtifacts artifacts: 'sbom.json', fingerprint: true
                    }
                }
            }
        }

        stage('Build and Start MLflow') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸš€ MLflow servisi docker-compose ile baÅŸlatÄ±lÄ±yor...'
                        sh 'docker compose build mlflow || true'
                        sh 'docker compose up -d mlflow'

                        echo 'â³ MLflow servisinin hazÄ±r olmasÄ± bekleniyor...'
                        sh 'sleep 20'
                    }
                }
            }
        }

        stage('Run Training') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸ¤– Model eÄŸitimi baÅŸlatÄ±lÄ±yor...'
                        // Rebuild ensures the new requirements (modelscan) are inside the image
                        sh 'docker compose build --no-cache trainer'
                        sh 'docker compose run --rm trainer'
                        echo 'âœ… Model eÄŸitimi tamamlandÄ±!'
                    }
                }
            }
        }

        stage('Model Security Scan') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸ›¡ï¸ EÄŸitilen modellerde gÃ¼venlik taramasÄ± yapÄ±lÄ±yor (ModelScan)...'

                        // We run modelscan INSIDE the trainer container context.
                        // Why? Because the models are stored in the 'mlruns' volume/directory
                        // which the trainer container has direct access to.
                        // Flag -p /mlruns tells it to scan that folder recursively.
                        sh 'docker compose run --rm trainer modelscan -p /mlruns'
                    }
                }
            }
        }
    }

    post {
        always {
            dir(env.PROJECT_DIR) {
                script {
                    echo 'ğŸ§¹ TÃ¼m servisler docker-compose ile kapatÄ±lÄ±yor...'
                    sh 'docker compose down -v || true'
                }
            }
            echo 'âœ… Pipeline tamamlandÄ±.'
            cleanWs()
        }
        success {
            echo 'ğŸ‰ Pipeline baÅŸarÄ±yla tamamlandÄ±!'
        }
        failure {
            echo 'âŒ Pipeline baÅŸarÄ±sÄ±z oldu!'
        }
    }
}