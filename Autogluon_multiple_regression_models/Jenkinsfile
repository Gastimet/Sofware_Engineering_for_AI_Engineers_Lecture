pipeline {
    agent any

    environment {
        PROJECT_DIR = 'Autogluon_multiple_regression_models'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¦ Kod, Git reposundan Ã§ekiliyor...'
                checkout scm
            }
        }

        // STAGE 1: Build the image FIRST.
        // This ensures all tools (cyclonedx, safety, modelscan) and code are inside the container.
        // We don't need volume mounts after this.
        stage('Build Trainer Image') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸ”¨ Docker imajÄ± inÅŸa ediliyor (Security tools dahil)...'
                        // We build the 'trainer' service defined in docker-compose.yaml
                        sh 'docker compose build --no-cache trainer'
                    }
                }
            }
        }

        // STAGE 2: Supply Chain Security (SBOM)
        // We run the tool INSIDE the container we just built.
        stage('Generate SBOM') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸ“œ Software Bill of Materials (SBOM) oluÅŸturuluyor...'

                        // Explanation:
                        // run --rm: Remove container after run
                        // -T: Disable pseudo-tty (needed to pipe output > properly)
                        // --entrypoint: Override the default python command to run cyclonedx-py
                        // /tmp/requirements.txt: The file path inside the image (defined in Dockerfile)
                        sh 'docker compose run --rm -T --entrypoint "cyclonedx-py" trainer requirements /tmp/requirements.txt -o - > sbom.json'

                        archiveArtifacts artifacts: 'sbom.json', fingerprint: true
                    }
                }
            }
        }

        // STAGE 3: Static Analysis (SAST)
        stage('Security Scan (SAST)') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸ”’ GÃ¼venlik taramalarÄ± yapÄ±lÄ±yor (Safety & Bandit)...'

                        // We run bash commands inside the container to check dependencies and code
                        // 'safety check': checks installed packages against vulns
                        // 'bandit -r src': checks python code for security flaws
                        try {
                            sh 'docker compose run --rm -T --entrypoint "sh" trainer -c "safety check && bandit -r src"'
                        } catch (Exception e) {
                            echo 'âš ï¸ Security scan found issues but continuing pipeline for demo purposes...'
                            // Uncomment the next line to fail the build on security issues
                            // error("Security scan failed")
                        }
                    }
                }
            }
        }

        stage('Start MLflow') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸš€ MLflow servisi baÅŸlatÄ±lÄ±yor...'
                        sh 'docker compose up -d mlflow'
                        sh 'sleep 15'
                    }
                }
            }
        }

        stage('Run Training') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸ¤– Model eÄŸitimi baÅŸlatÄ±lÄ±yor...'
                        sh 'docker compose run --rm trainer'
                        echo 'âœ… Model eÄŸitimi tamamlandÄ±!'
                    }
                }
            }
        }

        // STAGE 4: Model Security Scan
        stage('Model Security Scan') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo 'ğŸ›¡ï¸ ModelScan ile Pickle/Serialization taramasÄ±...'

                        // Scans the /mlruns folder (mounted volume) for malicious models
                        sh 'docker compose run --rm --entrypoint "modelscan" trainer -p /mlruns'
                    }
                }
            }
        }
    }

    post {
        always {
            dir(env.PROJECT_DIR) {
                script {
                    echo 'ğŸ§¹ Temizlik yapÄ±lÄ±yor...'
                    sh 'docker compose down -v || true'
                }
            }
            cleanWs()
        }
    }
}