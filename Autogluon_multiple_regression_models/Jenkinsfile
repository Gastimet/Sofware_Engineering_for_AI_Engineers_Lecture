pipeline {
    agent any

    tools {
        dockerTool 'docker-from-host'
    }

    environment {
        // Bu ismin reponuzdaki klasÃ¶r adÄ±yla aynÄ± olduÄŸundan emin olun.
        PROJECT_DIR = 'Autogluon_multiple_regression_models'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¦ Kod, Git reposundan Ã§ekiliyor...'
                checkout scm
            }
        }

        stage('Start Services & Run Training') {
            steps {
                dir(env.PROJECT_DIR) {
                    script {
                        echo "ğŸš€ MLflow servisi docker-compose ile baÅŸlatÄ±lÄ±yor..."
                        // --- DÃœZELTME 1: Tire yerine boÅŸluk kullanÄ±ldÄ± ---
                        sh "docker compose up --build -d mlflow"

                        echo "âŒ› MLflow servisinin saÄŸlÄ±klÄ± olmasÄ± bekleniyor..."
                        // Bu bekleme komutu, MLflow'un baÅŸlamasÄ± iÃ§in zaman tanÄ±r.
                        sh """
                        sleep 15
                        docker inspect --format='{{.State.Health.Status}}' mlflow | grep -q 'healthy' || (
                            echo 'âš ï¸ MLflow henÃ¼z saÄŸlÄ±klÄ± deÄŸil, 20 saniye daha bekleniyor...' &&
